<resources>
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/theme</item>

    </style>
    <style name="MyHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red_cherry</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/greyishBrown</item>
        <item name="colorControlActivated">@color/red_cherry</item>
    </style>

    <style name="YourStyleNameFor.NavigationDrawer" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">#00000000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>

        <!--
                <item name="listPreferredItemHeightSmall">@dimen/big_title</item>
        -->

    </style>
    <style name="mySpinnerItemStyle">
        <item name="colorControlActivated">@color/theme</item>
        <item name="colorControlHighlight">@color/theme</item>

    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="CustomEditTextTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>
</resources>